<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="16dp">
    <EditText android:id="@+id/editTextToken" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="Telegram Bot Token"/>
    <EditText android:id="@+id/editTextChatId" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="Telegram Chat ID"/>
    <Button android:id="@+id/buttonSave" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="Save"/>
</LinearLayout>
